<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_header"
                android:layout_width="wrap_content"
                android:layout_height="72.0dip"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/about_logo"
                android:drawablePadding="16.0dip"
                android:drawableStart="@drawable/about_logo"
                android:gravity="center"
                android:maxLines="1"
                android:padding="16.0dip"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_card_margin_half"
                android:layout_marginLeft="@dimen/material_card_margin"
                android:layout_marginRight="@dimen/material_card_margin"
                android:layout_marginTop="@dimen/material_card_margin_half"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                card_view:cardCornerRadius="@dimen/material_card_corner_radius">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin"
                    android:text="@string/about_description"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/card_text_margin" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="72.0dip"
                android:maxLines="1"
                android:padding="16.0dip"
                android:text="@string/about_devs"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <android.support.v7.widget.CardView
                android:id="@+id/gi097"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_card_margin_half"
                android:layout_marginLeft="@dimen/material_card_margin"
                android:layout_marginRight="@dimen/material_card_margin"
                android:layout_marginTop="@dimen/material_card_margin_half"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                card_view:cardCornerRadius="@dimen/material_card_corner_radius">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingStart="@dimen/activity_margin">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="48.0dip"
                        android:layout_height="48.0dip"
                        android:layout_gravity="center"
                        android:src="@drawable/gi097" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_margin">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_author"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_developer"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/thomas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_card_margin_half"
                android:layout_marginLeft="@dimen/material_card_margin"
                android:layout_marginRight="@dimen/material_card_margin"
                android:layout_marginTop="@dimen/material_card_margin_half"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                card_view:cardCornerRadius="@dimen/material_card_corner_radius">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingStart="@dimen/activity_margin">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="48.0dip"
                        android:layout_height="48.0dip"
                        android:layout_gravity="center"
                        android:src="@drawable/thomas" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_margin">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_thomas"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_natschool"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>